{
  "name": "Apollo Workspace Extensions",
  "description": "Hand-over file for Cursor / VS Code AI setup with required extensions and configuration notes.",
  "extensions": {
    "core": [
      {"id": "github.copilot", "purpose": "AI pair programming", "config": {"enable": ["php","javascript","css","html","markdown"]}},
      {"id": "github.copilot-chat", "purpose": "Conversational AI support"},
      {"id": "github.vscode-pull-request-github", "purpose": "GitHub PR management"}
    ],
    "php": [
      {"id": "bmewburn.vscode-intelephense-client", "purpose": "PHP IntelliSense", "config": {"files.maxSize": 5000000, "environment.phpVersion": "8.1", "stubs": ["wordpress","woocommerce","acf-pro","phpunit"]}},
      {"id": "aequabit.php-cs-fixer", "purpose": "PHP code style fixer", "config": {"onsave": false}},
      {"id": "xdebug.php-debug", "purpose": "PHP debugging"}
    ],
    "frontend": [
      {"id": "bradlc.vscode-tailwindcss", "purpose": "Tailwind CSS IntelliSense", "config": {"includeLanguages": {"php": "html"}}},
      {"id": "esbenp.prettier-vscode", "purpose": "Code formatter (JS/CSS/JSON/Markdown)"}
    ],
    "project": [
      {"id": "alefragnani.project-manager", "purpose": "Multi-project quick switch", "config": {"git.baseFolders": ["C:/Users/rafae/Local Sites"]}},
      {"id": "mhutchie.git-graph", "purpose": "Visualize git history"}
    ],
    "database": [
      {"id": "cweijan.vscode-mysql-client2", "purpose": "MySQL browsing"}
    ],
    "quality": [
      {"id": "usernamehw.errorlens", "purpose": "Inline diagnostics"}
    ]
  },
  "recommendedRemoval": [
    "calebporzio.simple-php-cs-fixer",
    "fterrag.vscode-php-cs-fixer",
    "robberphex.php-debug",
    "tiansin.php-debug",
    "selemondev.shadcn-vue",
    "selemondev.vscode-shadcn-svelte",
    "adrianub.shadcn-ng"
  ],
  "environment": {
    "localwp": {
      "site": "1212",
      "php_version": "8.2.27",
      "mysql_version": "8.0.35",
      "nginx_port": 10004,
      "mysql_port": 10005,
      "smtp_port": 10001
    },
    "database": {
      "host": "localhost",
      "port": 10005,
      "database": "local",
      "username": "root",
      "password": "root",
      "charset": "utf8",
      "tables": "55 WordPress tables"
    },
    "php": {
      "version": "8.2.27",
      "memory_limit": "256M",
      "max_execution_time": 1200,
      "upload_max_filesize": "300M",
      "post_max_size": "1000M",
      "error_log": "C:/Users/rafae/Local Sites/1212/logs/php/error.log"
    },
    "xdebug": {
      "version": "3.2.1",
      "mode": "debug,develop",
      "client_host": "localhost",
      "client_port": 9003,
      "start_with_request": "yes",
      "status": "ACTIVE âœ…"
    }
  },
  "debug": {
    "php": {
      "port": 9003,
      "xdebugIniHint": "xdebug.mode=debug xdebug.start_with_request=yes xdebug.client_host=127.0.0.1 xdebug.client_port=9003"
    }
  },
  "notes": [
    "Create .php-cs-fixer.php in root to define custom rules.",
    "Set up LocalWP site to use PHP 8.1 for matching IntelliSense version.",
    "Tailwind config optional; utility classes work without file due to CDN/global injection.",
    "Use Project Manager to jump between multiple Apollo plugin repos if split later.",
    "SQLTools connection can be added manually when DB credentials confirmed."  
  ]
}
