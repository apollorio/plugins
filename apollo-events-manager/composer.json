{
    "name": "apollo/events-manager",
    "description": "Apollo Events Manager - Event management and calendar for the Apollo ecosystem",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Apollo Team",
            "email": "dev@apollo.com.br"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "lucatume/di52": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-wordpress": "^1.0",
        "phpstan/extension-installer": "^1.3",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "rector/rector": "^1.0",
        "phpunit/phpunit": "^10.0",
        "wp-phpunit/wp-phpunit": "^6.0",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Apollo\\Events\\": "src/"
        },
        "classmap": [
            "includes/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Apollo\\Events\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse --memory-limit=512M",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcbf": "phpcbf --standard=phpcs.xml",
        "rector": "rector process",
        "rector-dry": "rector process --dry-run",
        "test": "phpunit",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "extra": {
        "installer-name": "apollo-events-manager"
    }
}
