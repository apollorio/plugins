{
  "name": "apollorio/apollo-social-core",
  "description": "Apollo Social Core â€” Professional WordPress Plugin Architecture",
  "type": "wordpress-plugin",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Apollo\\": "src/",
      "ApolloSocial\\": "src/"
    }
  },
  "require": {
    "php": ">=8.0",
    "nadar/quill-delta-parser": "^3.0",
    "symfony/polyfill-mbstring": "^1.28",
    "dompdf/dompdf": "^2.0"
  },
  "suggest": {
    "tecnickcom/tcpdf": "Alternative PDF library if Dompdf is not suitable"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "automattic/vipwpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "sirbrillig/phpcs-variable-analysis": "^2.11"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": "phpcs --standard=phpcs.xml.dist .",
    "fix": "phpcbf --standard=phpcs.xml.dist ."
  }
}