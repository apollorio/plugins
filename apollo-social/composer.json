{
  "name": "apollo/social",
  "description": "Apollo Social - Social features and community management for the Apollo ecosystem",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Apollo Team",
      "email": "dev@apollo.com.br"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Apollo\\": "src/",
      "Apollo\\Social\\": "src/",
      "ApolloSocial\\": "src/"
    },
    "files": [
      "includes/apollo-social-functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Apollo\\Social\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.0",
    "lucatume/di52": "^3.0",
    "nadar/quill-delta-parser": "^3.0",
    "symfony/polyfill-mbstring": "^1.28",
    "dompdf/dompdf": "^2.0"
  },
  "suggest": {
    "tecnickcom/tcpdf": "Alternative PDF library if Dompdf is not suitable"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-wordpress": "^1.0",
    "phpstan/extension-installer": "^1.3",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "automattic/vipwpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "sirbrillig/phpcs-variable-analysis": "^2.11",
    "rector/rector": "^1.0",
    "phpunit/phpunit": "^10.0",
    "wp-phpunit/wp-phpunit": "^6.0",
    "yoast/phpunit-polyfills": "^2.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true,
    "platform": {
      "php": "8.0"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse --memory-limit=1G",
    "phpcs": "phpcs --standard=phpcs.xml.dist .",
    "phpcbf": "phpcbf --standard=phpcs.xml.dist .",
    "lint": "@phpcs",
    "fix": "@phpcbf",
    "rector": "rector process",
    "rector-dry": "rector process --dry-run",
    "test": "phpunit",
    "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-html=coverage",
    "check": [
      "@phpcs",
      "@phpstan",
      "@test"
    ]
  },
  "extra": {
    "installer-name": "apollo-social"
  }
}
