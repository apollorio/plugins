<?xml version="1.0"?>
<ruleset name="Apollo Plugins - Unified PHPCS Configuration">
	<description>Professional WordPress Plugin Architecture - Security-Focused Standards for All Apollo Plugins</description>

	<!-- Target all Apollo plugins -->
	<file>apollo-core</file>
	<file>apollo-email-newsletter</file>
	<file>apollo-email-templates</file>
	<file>apollo-events-manager</file>
	<file>apollo-rio</file>
	<file>apollo-social</file>

	<!-- Base path for relative paths -->
	<arg name="basepath" value="."/>

	<!-- Output format -->
	<arg name="colors"/>
	<arg value="ps"/>
	<arg name="extensions" value="php"/>

	<!-- Performance Optimization -->
	<arg name="parallel" value="1"/>
	<arg name="cache" value=".phpcs-cache"/>
	<ini name="memory_limit" value="2G"/>

	<!-- Intelligent Exclusions -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>*/dist/*</exclude-pattern>
	<exclude-pattern>*.asset.php</exclude-pattern>
	<exclude-pattern>*.min.js</exclude-pattern>
	<exclude-pattern>*.min.css</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>

	<!-- PHP Compatibility - Match plugins' Requires PHP: 8.0 -->
	<config name="testVersion" value="8.0-"/>

	<!-- CRITICAL: Security and Escaping -->
	<rule ref="WordPress.Security.EscapeOutput" />
	<rule ref="WordPress.Security.ValidatedSanitizedInput" />
	<rule ref="WordPress.DB.PreparedSQL" />
	<rule ref="WordPress.DB.SlowDBQuery" />
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" value="apollo-plugins" />
		</properties>
	</rule>

	<!-- CRITICAL: Modern PHP Syntax -->
	<rule ref="Generic.Arrays.DisallowLongArraySyntax" />
	<rule ref="Generic.ControlStructures.DisallowYodaConditions" />

	<!-- IMPORTANT: Variable Analysis for undefined variables -->
	<rule ref="VariableAnalysis.CodeAnalysis.VariableAnalysis">
		<property name="allowUnusedParametersBeforeUsed" value="true" />
		<property name="allowUndefinedVariablesInFileScope" value="true" />
	</rule>

	<!-- IMPORTANT: Namespace Prefix Validation -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" value="apollo,Apollo,APOLLO" />
		</properties>
	</rule>

</ruleset>


