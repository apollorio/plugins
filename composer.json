{
  "name": "apollorio/apollo-plugins",
  "description": "Apollo Plugins Suite - Professional WordPress Plugin Architecture",
  "type": "wordpress-plugin",
  "license": "MIT",
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "wp-coding-standards/wpcs": "^3.3",
    "phpcompatibility/php-compatibility": "^9.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "sirbrillig/phpcs-variable-analysis": "^2.11",
    "phpstan/phpstan": "^2.1",
    "phpstan/extension-installer": "^1.4",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "symfony/process": "^7.4"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "process-timeout": 600
  },
  "scripts": {
    "analyze:phpstan": "phpstan analyse -c phpstan.neon.dist --memory-limit=8G",
    "analyze:phpstan:baseline": "phpstan analyse -c phpstan.neon.dist --memory-limit=8G --generate-baseline=phpstan-baseline.neon",
    "lint:phpcs": "phpcs -d memory_limit=2G --extensions=php -sp --standard=WordPress ./",
    "fix:phpcbf": "phpcbf -d memory_limit=2G --extensions=php -sp --standard=WordPress ./",
    "phpstan": "@analyze:phpstan"
  }
}
