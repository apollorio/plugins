{
  // Apollo PHP IntelliSense improves WordPress/ACF awareness
  "intelephense.stubs": [
    "wordpress",
    "woocommerce",
    "acf-pro",
    "phpunit"
  ],
  // Intelephense performance + compatibility (LocalWP PHP 8.2.27)
  "intelephense.files.maxSize": 5000000,
  "intelephense.environment.phpVersion": "8.2.27",
  // Intelephense diagnostics - disable false positives for cross-plugin dependencies
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.undefinedConstants": false,
  "intelephense.diagnostics.unusedParameters": false,
  // Tailwind IntelliSense inside PHP templates
  "tailwindCSS.includeLanguages": {
    "php": "html"
  },
  // Optional: if you keep a Tailwind config at project root
  // "tailwindCSS.experimental.configFile": "tailwind.config.js",
  // Use Prettier for frontend assets when present
  "prettier.requireConfig": true,
  // GitHub Copilot enabled for key languages
  "github.copilot.enable": {
    "php": true,
    "javascript": true,
    "css": true,
    "html": true,
    "markdown": true
  },
  // PHP-CS-Fixer (Aequabit) – relies on project config when present
  // Create .php-cs-fixer.php at repo root to customize rules
  "php-cs-fixer.onsave": false,
  // "php-cs-fixer.config": ".php-cs-fixer.php",
  // Project Manager – show Local sites
  "projectManager.git.baseFolders": [
    "C:\\Users\\rafae\\Local Sites"
  ],
  // Error Lens – keep concise
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  // SQLTools - LocalWP Apollo 1212 (READY TO USE)
  "sqltools.connections": [
    {
      "name": "LocalWP - Apollo 1212",
      "driver": "MySQL",
      "previewLimit": 50,
      "server": "localhost",
      "port": 10005,
      "database": "local",
      "username": "root",
      "password": "root",
      "connectionTimeout": 30
    }
  ]
}